@page
@model InquiryApp.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create Inquiry</h2>
            <form method="post" class="bg-light p-4 rounded shadow-sm">
                <div class="mb-3">
                    <label asp-for="Inquiry.Name" class="form-label">Name:</label>
                    <input asp-for="Inquiry.Name" class="form-control" />
                    <span asp-validation-for="Inquiry.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Inquiry.DateOfBirth" class="form-label">Date of Birth:</label>
                    <input asp-for="Inquiry.DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="Inquiry.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender:</label>
                    <div>
                        <input asp-for="Inquiry.Gender" type="radio" value="Male" class="form-check-input" id="male" />
                        <label class="form-check-label" for="male">Male</label>
                    </div>
                    <div>
                        <input asp-for="Inquiry.Gender" type="radio" value="Female" class="form-check-input" id="female" />
                        <label class="form-check-label" for="female">Female</label>
                    </div>
                    <span asp-validation-for="Inquiry.Gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hobbies:</label>
                    <div class="form-check">
                        <input type="checkbox" name="Inquiry.Hobbies" value="Reading" class="form-check-input" id="reading" />
                        <label class="form-check-label" for="reading">Reading</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="Inquiry.Hobbies" value="Sports" class="form-check-input" id="sports" />
                        <label class="form-check-label" for="sports">Sports</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Inquiry.Address" class="form-label">Address:</label>
                    <input asp-for="Inquiry.Address" class="form-control" />
                    <span asp-validation-for="Inquiry.Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Inquiry.State" class="form-label">State:</label>
                    <input asp-for="Inquiry.State" class="form-control" />
                    <span asp-validation-for="Inquiry.State" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Inquiry.City" class="form-label">City:</label>
                    <input asp-for="Inquiry.City" class="form-control" />
                    <span asp-validation-for="Inquiry.City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Inquiry.Pincode" class="form-label">Pincode:</label>
                    <input asp-for="Inquiry.Pincode" class="form-control" />
                    <span asp-validation-for="Inquiry.Pincode" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
